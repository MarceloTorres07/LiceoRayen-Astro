---
const { titulo, fecha, descripcion, imagen, enlace, alt } = Astro.props;
---

<section class="mb-8 relative rounded overflow-hidden shadow-lg">
  <img src={imagen} alt={alt || titulo} class="w-full rounded" />
  <div class="absolute bottom-0 left-0 w-full bg-gray-900 text-white p-4">
    <h5 class="font-bold text-center text-lg">{titulo}</h5>
    <small class="block text-center">Publicado el {fecha}</small>
    <p class="text-center text-sm mt-2">{descripcion}</p>
    <div class="text-center mt-2">
      <a href={enlace} class="inline-block border border-yellow-500 text-yellow-500 px-3 py-1 rounded text-xs hover:bg-yellow-500 hover:text-black">Leer m√°s</a>
    </div>
  </div>
</section>
