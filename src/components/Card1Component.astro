---
const { titulo, descripcion, fecha, autor, imagen, enlace } = Astro.props;
---

<div class="w-full bg-gray-900 text-white rounded shadow-md overflow-hidden transition transform hover:scale-105">
  <!-- Imagen -->
  <img src={imagen} alt={titulo} class="w-full h-40 object-cover" />

  <!-- Contenido -->
  <div class="p-4">
    <!-- Fecha -->
    {fecha && (
      <div class="text-xs text-gray-400 mb-2">
        <span>{fecha}</span>
      </div>
    )}

    <!-- Título -->
    <h6 class="font-semibold text-lg mb-1">{titulo}</h6>

    <!-- Descripción -->
    <p class="text-sm mb-3">{descripcion}</p>

    <!-- Botón -->
    <a
      href={enlace}
      class="inline-block border border-yellow-500 text-yellow-500 px-3 py-1 rounded text-xs hover:bg-yellow-500 hover:text-black transition"
    >
      Leer más
    </a>

    <!-- Autor al final -->
    {autor && (
      <div class="text-xs text-gray-400 mt-3 text-right italic">
        {autor}
      </div>
    )}
  </div>
</div>