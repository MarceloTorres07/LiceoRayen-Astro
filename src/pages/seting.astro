---
// Este bloque se ejecuta en el servidor
import Layout from "../layouts/Layout.astro";

interface datos {
  id: number;
  title: string;
  body: string;
  userId: number;
}

const response = await fetch('https://jsonplaceholder.typicode.com/posts');
const user: datos[] = await response.json();
---

<Layout>
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-4">
    {user.map((dato) => (
      <div class="bg-gray-900 text-white rounded shadow-md overflow-hidden transition transform hover:scale-105 p-4">
        <h1 class="text-lg font-bold">{dato.userId}</h1>
        <h2 class="text-md">{dato.id}</h2>
        <h3 class="text-xl font-semibold mt-2">{dato.title}</h3>
        <p class="mt-2 text-sm">{dato.body}</p>
      </div>
    ))}
  </div>
</Layout>