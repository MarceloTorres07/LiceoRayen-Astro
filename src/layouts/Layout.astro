---
import '../styles/global.css';
import HeaderComponent from '../components/HeaderComponent.astro';
import FooterComponent from '../components/FooterComponent.astro';
import CalendarioComponent from '../components/CalendarioComponent.astro';
import minImg from '../assets/images/inicio/min.jpg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>

  <body class="flex flex-col min-h-screen bg-gray-100">
    <div class="relative z-10">
      <HeaderComponent />
    </div>

    <main class="flex-1 grid grid-cols-1 md:grid-cols-3 gap-6 p-4 relative z-0">
      <div class="md:col-span-2">
        <slot />
      </div>
      <div class="md:col-span-1 flex flex-col items-center space-y-6">
        <div class="w-full">
          <CalendarioComponent />
        </div>

        <div class="md:absolute md:right-4 md:top-[360px] mt-6 md:mt-0 w-full md:w-64">
          <a
            href="https://admision.mineduc.cl/vitrina-vue/establecimiento/8255"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src={minImg.src}
              alt="Ir a otra pÃ¡gina"
              class="w-full rounded shadow-md hover:scale-105 transition duration-300"
            />
          </a>
        </div>
      </div>
    </main>

    <FooterComponent />
  </body>
</html>